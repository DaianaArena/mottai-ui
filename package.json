{
  "name": "mottai-ui",
  "private": false,
  "version": "1.0.1",
  "type": "module",
  "main": "./dist/mottai-ui.umd.js",
  "module": "./dist/mottai-ui.es.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/styles.css",
  "exports": {
    ".": {
      "import": "./dist/mottai-ui.es.js",
      "require": "./dist/mottai-ui.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css",
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "dist/index.d.ts",
    "dist/**/*.d.ts",
    "dist/styles.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:css",
    "build:css": "tailwindcss -m -i ./src/styles/index.css -o ./dist/styles.css",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "concurrently \"npm run storybook:css\" \"storybook dev -p 6006\"",
    "storybook:css": "tailwindcss -w -i ./src/styles/index.css -o ./dist/styles.css",
    "build-storybook": "concurrently \"npm run build-storybook:css\" \"storybook build\"",
    "build-storybook:css": "tailwindcss -m -i ./src/styles/index.css -o ./dist/styles.css",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "D": "^1.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/js": "^9.25.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/builder-vite": "^8.6.14",
    "@storybook/experimental-addon-test": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.4",
    "@vitest/coverage-v8": "^3.1.4",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.0.0",
    "playwright": "^1.52.0",
    "postcss": "^8.4.35",
    "storybook": "^8.6.14",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
